# Environment variables for local development
# Copy this file to .env and adjust as needed

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=marketplacebuilder
DATABASE_USER=marketplace
DATABASE_PASSWORD=marketplace_dev_password
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=marketplacebuilder;Username=marketplace;Password=marketplace_dev_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
ConnectionStrings__Redis=localhost:6379,password=redis_dev_password

# MinIO (S3 Compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=marketplace-assets
MINIO_USE_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ISSUER=MarketplaceBuilder
JWT_AUDIENCE=MarketplaceBuilder
JWT_EXPIRATION_MINUTES=60

# Stripe (use test keys)
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Application
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000;https://+:5001

# Seq (Logging)
SEQ_URL=http://localhost:5341
SEQ_API_KEY=

# Hangfire
HANGFIRE_DASHBOARD_USERNAME=admin
HANGFIRE_DASHBOARD_PASSWORD=admin123

# Rate Limiting
RATE_LIMIT_PERMIT_LIMIT=100
RATE_LIMIT_WINDOW_SECONDS=60

# Multi-tenant
DEFAULT_TENANT_HOST=localhost
TENANT_CACHE_EXPIRATION_MINUTES=30
