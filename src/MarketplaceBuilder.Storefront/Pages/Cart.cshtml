@page
@model MarketplaceBuilder.Storefront.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h1 class="mb-4">Shopping Cart</h1>

    @if (!Model.CartItems.Any())
    {
        <div class="alert alert-info">
            <h4>Your cart is empty</h4>
            <p>Browse our <a href="/products">products</a> to add items to your cart.</p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="row mb-3 pb-3 border-bottom">
                                <div class="col-md-2">
                                    @if (!string.IsNullOrEmpty(item.PrimaryImageUrl))
                                    {
                                        <img src="@item.PrimaryImageUrl" class="img-fluid" alt="@item.ProductTitle" style="max-height: 80px; object-fit: contain;">
                                    }
                                    else
                                    {
                                        <div class="bg-light p-3 text-center">
                                            <small class="text-muted">No image</small>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-5">
                                    <h5>@item.ProductTitle</h5>
                                    <small class="text-muted">@item.VariantName</small>
                                </div>
                                <div class="col-md-2 text-center">
                                    <strong>Qty: @item.Quantity</strong>
                                </div>
                                <div class="col-md-3 text-end">
                                    <p class="mb-0">@item.FormattedUnitPrice each</p>
                                    <p class="mb-0"><strong>@item.FormattedLineTotal</strong></p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h4>Order Summary</h4>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>@((Model.TotalAmount / 100.0m).ToString("N2")) @Model.Currency</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Total:</span>
                            <h4 class="text-primary">@((Model.TotalAmount / 100.0m).ToString("N2")) @Model.Currency</h4>
                        </div>
                        
                        <form method="post" asp-page-handler="Checkout">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-credit-card"></i> Proceed to Checkout
                            </button>
                        </form>
                        
                        <a href="/products" class="btn btn-outline-secondary w-100 mt-2">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
