@page
@model MarketplaceBuilder.Admin.Pages.Onboarding.Step4_DomainPublishModel
@{
    ViewData["Title"] = "Step 4: Domain & Publish";
    Layout = "_AdminLayout";
}

<h2>Step 4: Domain & Publish</h2>

<form method="post">
    <div class="mb-3">
        <label for="Subdomain" class="form-label">Subdomain</label>
        <input type="text" class="form-control" id="Subdomain" asp-for="Subdomain" placeholder="mystoresubdomain" required />
        <div class="form-text">Preview: @Model.PreviewUrl</div>
    </div>
    <button type="submit" class="btn btn-success">Publish Store</button>
</form>