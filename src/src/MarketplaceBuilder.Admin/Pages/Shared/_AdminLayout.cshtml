<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketplaceBuilder Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h4 class="text-center mb-4">Admin</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Onboarding/Step1-Identity">Onboarding</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Catalog/Index">Catalog</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Orders/Index">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Billing/Index">Billing</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Settings/Index">Settings</a>
                </li>
            </ul>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1">
            <!-- Topbar -->
            <nav class="navbar navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <span class="navbar-brand mb-0 h1">Tenant: @ViewData["TenantName"]</span>
                    <div class="d-flex">
                        <span class="navbar-text me-3">User</span>
                        <a class="btn btn-outline-secondary btn-sm" href="/logout">Logout</a>
                    </div>
                </div>
            </nav>

            <div class="container mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Toaster -->
    <div id="toaster" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1055;">
        <div id="successToast" class="toast align-items-center text-white bg-success border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body" id="successMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
        <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body" id="errorMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>